<%- model_class = Charge -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>

</div>


<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <tr >
      <td colspan="5"><h1> Successful Charges </h1></td>
    </tr>
    <% successful_charges.each do |charge| %>
      <tr>
        <td><%= charge.customer.first_name %></td>
        <td><%= humanized_money_with_symbol charge.amount %></td>
        <td><%= charge.created_at.strftime("%B %d %Y") %></td>
      </tr>
    <% end %>

    <tr >
      <td colspan="5"><h1> Failed Charges </h1></td>
    </tr>

    <% failed_charges.each do |charge| %>
      <tr class="failed">
        <td><%= charge.customer.first_name %></td>
        <td><%= humanized_money_with_symbol charge.amount %></td>
        <td><%= charge.created_at.strftime("%B %d %Y") %></td>
      </tr>
    <% end %>
    <tr >
      <td colspan="5"><h1> Dispute Charges </h1></td>
    </tr>

    <% dispute_charges.each do |charge| %>
      <tr class="dispute">
        <td><%= charge.customer.first_name %></td>
        <td><%= humanized_money_with_symbol charge.amount %></td>
        <td><%= charge.created_at.strftime("%B %d %Y") %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_charge_path,
            :class => 'btn btn-primary' %>
